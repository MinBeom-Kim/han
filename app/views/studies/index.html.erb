<h1>Studies</h1>

<table>
  <thead>
    <tr>
      <th>스터디명</th>
      <th>개요</th>
      <th>목표</th>
      <th>커리큘럼</th>
      <th>정원</th>
      <th>신청 인원</th>
      <th>개설유무</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @studies.each do |study| %>
      <tr>
        <td><%= study.study_name %></td>
        <td><%= study.intro %></td>
        <td><%= study.goal %></td>
        <td><%= study.curriculum %></td>
        <td><%= study.max_number %></td>
        <td><%= CategoryHasStudy.where(study_id: study).size %>명</td>
        <td><%= study.status %></td>
        <td><%= link_to 'Show', study %></td>
        <td><%= link_to 'Edit', edit_study_path(study) %></td>
        <td><%= link_to 'Destroy', study, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

