

<div class="jumbotron" style="margin-bottom: 3 ">
	<div class="container">
        <h1 style="font-family:inherit">Studies</h1>
    </div>
</div>


<table>
  <thead>
    <tr>
      <th>카테고리</th>
      <th>스터디명</th>
      <th>개요</th>
      <th>목표</th>
      <th>커리큘럼</th>
      <th>정원</th>
      <th>개설유무</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @studies.each do |study| %>
      <tr>
        <td><%= study.category %></td>
        <td><%= study.study_name %></td>
        <td><%= study.intro %></td>
        <td><%= study.goal %></td>
        <td><%= study.curriculem %></td>
        <td><%= study.max_number %></td>
        <td><%= study.status %></td>
        <td><%= link_to 'Show', study %></td>
        <td><%= link_to 'Edit', edit_study_path(study) %></td>
        <td><%= link_to 'Destroy', [study.category, study], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

