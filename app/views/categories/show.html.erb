
<p>
  <strong>Category name:</strong>
  <%= @category.category_name %>
</p>

<table>
  <% @category.studies.each do |study| %>
    <tr>
      <td><%= study.study_name %></td>
      <td> | <%= link_to 'Edit', edit_category_study_path(@category, study) %></td>
      <td><%= link_to 'Destroy', [study.category, study], method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>


<%= render 'studies/form' %>
<%= link_to 'Study list', studies_path %>
<br>
<%= link_to 'Back', categories_path(@category) %>

